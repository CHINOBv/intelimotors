{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./express.d.ts",  "./src/types"]
  },
  "include": ["src/**/*", "express.d.ts", "src/types/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
